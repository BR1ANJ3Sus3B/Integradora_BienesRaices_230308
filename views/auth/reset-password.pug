extends ../layout/index

block contenido
   div.py-10(style="background: url('https://i.pinimg.com/originals/be/54/b8/be54b82ccd4221f086185076f525e0c2.gif') no-repeat center center / cover; min-height: 100vh; display: flex; justify-content: center; align-items: center;")  
        div.w-full.max-w-md.bg-white.bg-opacity-90.py-10.px-8.shadow-lg.rounded-lg  
            h1.text-4xl.mb-6.font-extrabold.text-center.text-indigo Bienes 
                span.font-normal.text-black Raíces  
            h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.bg-opacity-90.py-8.px-4.shadow-lg.rounded-lg 
                form.space-y-5(method="POST" novalidate) 
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Coloca tu nuevo Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Escribe tu nuevo password" type="password" name="password") 
                    
                    // Botón de guardar con animación y fondo GIF
                    input(
                        class="w-full bg-indigo hover:bg-neon text-white font-bold py-3 cursor-pointer rounded-lg transition duration-300 ease-in-out transform hover:scale-105 focus:outline-none"
                        style="background: url('https://i.pinimg.com/originals/21/b2/a5/21b2a5edcc8ec65055f48d6a99b8f5d1.gif') no-repeat center center / cover;"
                        type="submit" 
                        value="Guardar Password"
                    )
